        <content>
			<Table
                id="psidTable"
                inset="false"
				showSeparators="Inner"
				headerText="Products"
				items="{
					path: 'pendingListModel>/',
						sorter: {
							path: 'psid'
						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
                	<columns>
						<Column width="12em">
							<Text text="PSID"/>
						</Column>
						<!-- <Column hAlign="End"> -->
						<Column	width="12em">
							<Text text="Status"/>
						</Column>
						<Column	width="12em">
							<Text text="Submission Date"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press=".onListItemPress">
							<cells>
								<Text text="{pendingListModel>psid}" />
								<Text text="{pendingListModel>status}" />
								<Text text="{pendingListModel>modifiedat}" />
							</cells>
						</ColumnListItem>
					</items>
            </Table>
        </content>

        </IconTabFilter>
    </items>
</IconTabBar>

</mvc:View>